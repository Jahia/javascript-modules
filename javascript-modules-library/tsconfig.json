{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["esnext", "dom"],
    // Output JS code to an inaccessible directory, so that clients can't import it directly
    "outDir": "internal-dist",
    "declaration": true,
    "declarationDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["target/types/*"]
    },
    "verbatimModuleSyntax": true
  },
  "include": ["src/**/*.js", "src/**/*.mjs", "src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.spec.tsx"]
}
