{
  "name": "hydrogen",
  "version": "1.1.0",
  "type": "module",
  "files": [
    "dist",
    "src/**/*.cnd",
    "settings",
    "static"
  ],
  "scripts": {
    "build": "tsc --noEmit && vite build && run package",
    "clean": "rm -rf dist/",
    "deploy": "jahia-deploy",
    "format": "prettier --write --list-different .",
    "lint": "eslint .",
    "package": "yarn pack --out dist/package.tgz",
    "dev": "vite build --watch",
    "watch": "run dev",
    "watch:callback": "run package && run deploy"
  },
  "dependencies": {
    "canvas-confetti": "^1.9.4",
    "clsx": "^2.1.1",
    "modern-normalize": "^3.0.1"
  },
  "devDependencies": {
    "@eslint-react/eslint-plugin": "^2.3.13",
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.39.2",
    "@jahia/javascript-modules-library": "workspace:^",
    "@jahia/vite-plugin": "workspace:^",
    "@types/canvas-confetti": "^1.9.0",
    "@types/react": "^19.2.7",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "i18next": "^25.7.3",
    "prettier": "^3.7.4",
    "react": "^19.2.3",
    "react-i18next": "^16.5.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "typescript-plugin-css-modules": "^5.2.0",
    "vite": "^7.3.0"
  },
  "packageManager": "yarn@4.10.3",
  "engines": {
    "node": ">=22.0.0",
    "yarn": ">=4.0.0"
  },
  "jahia": {
    "snapshot": true,
    "module-dependencies": "default",
    "module-type": "templatesSet",
    "server": "dist/server/index.js",
    "static-resources": "/dist/client,/dist/assets,/locales,/images,/icons"
  }
}
